<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tinyrssreader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/feeds_title"
        android:theme="@style/CustomLightTheme" >
        <activity
            android:name="com.tinyrssreader.activities.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tinyrssreader.activities.actionbar.CategoriesActivity" />
        <activity android:name="com.tinyrssreader.activities.actionbar.FeedsActivity" />
        <activity android:name="com.tinyrssreader.activities.actionbar.HeadlinesActivity" />
        <activity android:name="com.tinyrssreader.activities.actionbar.ArticleActivity" />
    </application>

</manifest>